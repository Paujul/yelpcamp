<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      class="validated-form"
      novalidate
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label fw-bold text-muted" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%= campground.title %>"
          required
        />
        <div class="valid-feedback">Mantap!</div>
      </div>
      <div class="mb-3">
        <label class="form-label fw-bold text-muted" for="location"
          >Location</label
        >
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%= campground.location %>"
          required
        />
        <div class="valid-feedback">Mantap!</div>
      </div>

      <div class="mb-3">
        <label class="form-label fw-bold text-muted" for="price"
          >Campground Price</label
        >
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control"
            placeholder="49.50"
            aria-label="Username"
            aria-describedby="price-label"
            id="price"
            name="campground[price]"
            value="<%= campground.price %>"
            required
          />
          <div class="valid-feedback">Mantap!</div>
          <div class="invalid-feedback">Salah!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label fw-bold text-muted" for="description"
          >Description</label
        >
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          rows="5"
          required
        >
        
<%= campground.description %></textarea
        >
        <div class="valid-feedback">Mantap!</div>
      </div>

      <label for="image" class="form-label fw-bold text-muted"
        >Choose Image(s)</label
      >
      <div class="form-file custom-file">
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
        <label for="image" class="form-file-label form-label">
          <span class="custom-file-label"></span>
          <div class="form-file button"></div>
        </label>
        <div class="valid-feedback">Mantap!</div>
      </div>

      <div class="mb-3">
        <% campground.images.forEach((img, i) => { %>
        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="img-<%= i %>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
        </div>
        <label for="img-<%= i %>">Delete</label>
        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-info text-white">Update Campground</button>
      </div>
    </form>

    <a href="/campgrounds">Back to Campground</a>
  </div>
</div>
